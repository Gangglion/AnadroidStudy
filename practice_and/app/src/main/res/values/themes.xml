<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OddmentsProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 전체 testViewStyle과 buttonStyle 적용 -->
        <item name="android:textViewStyle">@style/nanumTextView</item>
        <item name="android:buttonStyle">@style/nanumButton</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Unscramble" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_200</item>
        <item name="colorSecondaryVariant">@color/light_blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>

    </style>

    <!-- TextView에 적용될 스타일 생성 -->
    <style name="nanumTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nanum_dahang</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!-- TextView에 부분적으로 적용될 스타일 생성  -->
    <style name="nanumTextView_big" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nanum_dahang</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50dp</item>
    </style>
    <!-- Button 에 적용될 스타일 생성 -->
    <style name="nanumButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/nanum_dahang</item>
        <item name="android:background">@drawable/custom_btn_background</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!-- 부분적으로 Button에 적용될 작은 모양의 스타일 생성 -->
    <style name="nanumButton_small" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/nanum_dahang</item>
        <item name="android:background">@drawable/custom_btn_background</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.OddmentsProject.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.OddmentsProject.AppWidgetContainer" parent="Theme.OddmentsProject.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">1dp</item>
    </style>

